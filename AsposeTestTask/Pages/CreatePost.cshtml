@model Avangardum.AsposeTestTask.Pages.CreatePost

@{
    ViewData["Title"] = "Create Post";
}

<h1>Create Post</h1><br/>
<form asp-page="@nameof(CreatePost)">
    <label asp-for="Input.Title">Title</label>
    <input class="form-control" asp-for="Input.Title"><br/>
